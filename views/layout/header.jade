doctype html
html(lang= "ru")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")

        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(href="/material/css/roboto.min.css" rel="stylesheet")
        link(href="/css/style.css" rel="stylesheet")
        link(href="/css/sidebar.css" rel="stylesheet")
        link(href="/material/css/material.css" rel="stylesheet")
        link(href="/material/css/ripples.min.css" rel="stylesheet")
        link(href="/css/tooltipster.css" rel="stylesheet")
        link(href="/css/header.css" rel="stylesheet")
        link(rel="shortcut icon" href="/images/ico.png")
        script(src='/scripts/angular.min.js')
        script(src='/scripts/jquery-1.10.2.min.js')
        script(src='/scripts/jquery.headtacular.min.js')
        script(src='/scripts/jquery.tooltipster.min.js')
        title #{title}
    body

        header.header
            //a(href="/")
            //    img.header-image(src="/images/h.png")
            div.header-logo-common
                p(align="center" style="margin:0;")
                    a(href="/")
                        img.header-logo(src="/images/dus-small.png")
                p(align="center" style="margin:0;")
                    a(href="/")
                        img.header-logo-descr(src="/images/dus-descr.jpg")
            hr
            div.container.header-container
                if(isLoggedIn)
                    div.user-image-area
                        if(user.imageUrl)
                            img.img-circle.main-user-avatar(src="#{user.imageUrl}" href="/profile")
                        else
                            img.img-circle.main-user-avatar(src="/images/default-user-icon-profile.png" href="/profile")
                        div(align="center")
                            a.text-primary.logout-text(align="center" href="/login/logout" style="margin:15px;") log out
                div.row.menu-row
                    div.col-xs-9
                        nav.navbar.navbar-default
                            ul.nav.navbar-nav
                                i.mdi-home
                                if isLoggedIn
                                    li.menu-link-li(style="")
                                        a.menu-link(href="/home" style="left:0px;")
                                            | Home
                                    li.menu-link-li
                                        a.menu-link(href="/profile" style="left:0px;")
                                            | Profile
                                    li.menu-link-li
                                        a.menu-link(href="/Library")
                                            | Library
                                        ul.dropdown-menu
                                            each val, index in sections
                                                li
                                                    a(href="/library#" + val._id)
                                                        | #{val.name}
                                    li.menu-link-li
                                        a.menu-link(href="/Courses")
                                            | Courses
                                    li.menu-link-li
                                        a.menu-link(href="/Glossary")
                                            | Glossary
                                    if(user.isAdmin)
                                        li.menu-link-li
                                            a.menu-link(href="#" style="left:0px;")
                                                | menu+
                                            ul.dropdown-menu
                                                li
                                                    a(href="/posts")
                                                        | All content
                                                li
                                                    a(href="/users")
                                                        | Users Management
                                                li
                                                    a(href="/sections")
                                                        | Library Sections
                    div.col-xs-3.text-right.right-nav
                        form.pull-right.menu-link-li(style="padding-bottom:16px;")
                            input.form-control.col-lg-8(type="text" placeholder="Search" id="searchtext")

                    if isLoggedIn
                        span.header-user-name
                            p(align="center" style="margin:5px;") #{user.displayName}
                    span
                        if isLoggedIn
                            //a.pull-right.login-logout(href="/login/logout")
                            //    | Logout
                        else
                            a.pull-right.login-logout.login-text(href="/login")
                                | login
        include sidebar
        div.container.main-content(style="")
            div.row
                div.col-md-12
                    block content

        include footer
    script(src='/js/common.js')
    script(src='/js/sidebar.js')